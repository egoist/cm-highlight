{
  "name": "cm-highlight",
  "version": "0.1.1",
  "description": "use codemirror as a syntax highlighter",
  "repository": {
    "url": "egoist/cm-highlight",
    "type": "git"
  },
  "main": "dist/cm-highlight.common.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest && npm run lint && npm run build",
    "lint": "xo",
    "build": "bili"
  },
  "author": "egoist <0x142857@gmail.com>",
  "license": "MIT",
  "babel": {
    "env": {
      "test": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.22.0",
    "bili": "^0.14.0",
    "codemirror": "^5.25.0",
    "eslint-config-rem": "^3.0.0",
    "jest-cli": "^18.1.0",
    "xo": "^0.17.1"
  },
  "xo": {
    "extends": "rem",
    "esnext": true,
    "envs": [
      "jest"
    ],
    "rules": {
      "import/no-unassigned-import": 0
    }
  },
  "peerDependencies": {
    "codemirror": "^5.25.0"
  }
}
